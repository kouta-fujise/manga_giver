  <div class="row row-cols-3 manga_row">
    <% @mangas.each do |manga|%>
      <%= link_to("/manga/#{manga.id}") do %>
        <div class="col">
          <div class="card manga_card">
            <!--漫画の画像表示-->
            <% if manga.image.present?  %>
              <% if File.exist?("./app/assets/images/#{manga.image}")%>
                <%= image_tag manga.image,class:"manga_image"%>
              <% else %>
                <p>画像準備中</p>
              <% end %>
            <% else %>
              <p>画像準備中</p>
            <% end %>
            <!--/漫画の画像表示-->
            <div class="card-body">
              <h6 class="card-title">
                <%= manga.name %>
              </h6>
              <!-- <div class="card-text">
                <%#= manga.author%>
              </div> -->
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div><!-- <コンテナエンド> -->

