    <header>
      <div class="header container">
        <div class="row header_row">
          <div class="col-2">manga-giver</div>
          <div class="col-10 rank">
            <%if @current_user == nil%>
              <a href="/login">
                <div style="margin-top:15px;">
                  未ログイン
                </div>
              </a>
            <%else%>
              <%total = @current_user.total_amount_paid%>
              <%if total>100000%>
                ランク:<span>プラチナ</span>
              <%elsif total > 10000%>
                ランク:<span>ゴールド</span>
              <%elsif total > 5000%>
                ランク:<span>シルバー</span>
              <%elsif total > 0%>
                ランク:<span>ブロンズ</span>
              <%else%>
                ランク:<span>ビギナー</span>
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
    </header>

    <main>
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>

    <%= yield %>

    </main>
