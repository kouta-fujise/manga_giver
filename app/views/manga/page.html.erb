<div class = "manga-page-item">
  <div class = "image">
  <% if @manga.image.present?  %>
    <% if File.exist?("./app/assets/images/#{@manga.image}")%>
      <%= image_tag(@manga.image)%>
    <% else %>
    <p>画像準備中</p>
    <% end %>
  <% else %>
  <p>画像準備中</p>
  <% end %>
  </div>
  <div class = "name">
  <%= @manga.name %>
  </div>
  <div class = "author">
  <%= @manga.author%>
  </div>
  <div class = "text">
  <%= @manga.text%>
  </div>
  <div class = "volume">
  <% if @manga.volume == 1 %>
  <p>1巻</p>
  <%else%>
  <p>1巻〜<%= @manga.volume%>巻</p>
  <% end %>
  </div>
  <div class = "price">
  <p><%= @manga.price * @manga.volume%>円</p>
  </div>
</div>

